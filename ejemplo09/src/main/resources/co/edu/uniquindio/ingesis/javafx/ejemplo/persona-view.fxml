<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.ingesis.javafx.ejemplo.PersonaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextField fx:id="txtNombre" promptText="Ingrese su nombre" />
   <TextField fx:id="txtApellido" promptText="Ingrese su apellido" />
   <TextField fx:id="txtId" promptText="Ingrese su número de identificación" />
   <TextField fx:id="txtEmail" promptText="Ingrese su email" />
   <DatePicker fx:id="txtFecha" prefHeight="25.0" prefWidth="320.0" promptText="Ingrese su fecha de nacimiento" />

    <Label fx:id="welcomeText" />
    <Button onAction="#onAceptarButtonClick" text="Aceptar" />
</VBox>
